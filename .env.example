# Anthropic API Key (必需)
ANTHROPIC_API_KEY=sk-your-api-key-here

# API Base URL (使用云雾AI转发)
ANTHROPIC_BASE_URL=https://yunwu.zeabur.app

# 模型配置
DEFAULT_MODEL=claude-opus-4-5-20251101-thinking
MAX_TOKENS=8192

# Agent配置
AGENT_NAME=OpenAkita
MAX_ITERATIONS=100
AUTO_CONFIRM=false

# 数据库路径
DATABASE_PATH=data/agent.db

# 日志级别
LOG_LEVEL=INFO

# GitHub Token (用于搜索和下载技能)
GITHUB_TOKEN=github_pat_your-token-here

# === IM 通道配置 ===

# Telegram
TELEGRAM_ENABLED=false
TELEGRAM_BOT_TOKEN=your-telegram-bot-token

# 飞书 (需要时启用)
FEISHU_ENABLED=false
FEISHU_APP_ID=
FEISHU_APP_SECRET=

# 企业微信 (需要时启用)
WEWORK_ENABLED=false
WEWORK_CORP_ID=
WEWORK_AGENT_ID=
WEWORK_SECRET=

# 钉钉 (需要时启用)
DINGTALK_ENABLED=false
DINGTALK_APP_KEY=
DINGTALK_APP_SECRET=

# QQ (需要时启用)
QQ_ENABLED=false
QQ_ONEBOT_URL=ws://127.0.0.1:8080

# === 记忆系统配置 ===

# Embedding 模型 (用于向量搜索)
# 默认: shibing624/text2vec-base-chinese (中文优化，约100MB)
# 可选: sentence-transformers/all-MiniLM-L6-v2 (英文，约90MB)
EMBEDDING_MODEL=shibing624/text2vec-base-chinese

# Embedding 设备 (cpu 或 cuda)
# 如果有 NVIDIA GPU，设为 cuda 可加速
EMBEDDING_DEVICE=cpu

# 历史对话保留天数
MEMORY_HISTORY_DAYS=30

# 历史对话最大文件数
MEMORY_MAX_HISTORY_FILES=1000

# 历史对话最大占用空间 (MB)
MEMORY_MAX_HISTORY_SIZE_MB=500
